<h1><%=@survey.question%></h1>
<div id="answers-div">
	<% if @survey.scale_size == 2 %>
		<%=link_to image_tag('0-' + @survey.scale_type + '.png'), '#', :onclick => "return saveRating('0', #{@survey.id})"%>
		<%=link_to image_tag('4-' + @survey.scale_type + '.png'), '#', :onclick => "return saveRating('4', #{@survey.id})"%>
		
		
	<% elsif @survey.scale_size == 5 %>
	 	<% 0.upto(4) do |i| %>
			<%=link_to image_tag(i.to_s + '-' + @survey.scale_type + '.png'), '#', :onclick => "return saveRating('#{i}', #{@survey.id})"%>
		<% end %>
	<% else %>
		Sorry, an error occurred
	<% end %>
</div>