<div id="content">
	<h1><%=@survey.question%></h1>
	
	<div id="answers-div">
		<% if @survey.scale_size == 2 %>
		
		<% elsif @survey.scale_size == 5 %>
		<ul>
			<% for i in 1..5 %>
			<li>
				<%=i%>
			</li>
			<% end %>
		</ul>
		<% else %>
			Sorry, an error occurred
		<% end %>
	</div>
	<div id="ajax-div" style="display:none">
		
	</div>
	<div id="stats-div" style="display:none">
		
	</div>
</div>
<script type="text/javascript">

var upd_anwsers = true;
$(function(){
	//$('#ajax-div').load();
	loadAnswers();
	showAnswers();
	updateStatsDiv();
	setInterval( "updateStatsDiv()", 4000 );
	setInterval( function() {
		if (upd_answers){
	    	loadAnswers();
			showAnswers();
			}
	}, 60000 );
});

function loadAnswers(){
	$.ajax({
	  url: '/locations/<%=@location.id%>/answers',
	  success: function(data) {
	    $('#ajax-div').html(data);
	  },
	  beforeSend: function(data) {
	    $('#ajax-div').html('<img src="/images/ajax.gif" alt="" />');
	  }
	});
}

function showAnswers(){
	$('#ajax-div').show();
	upd_answers = true;
}

function hideAnswers(){
	$('#ajax-div').hide();
}

function showStats(){
	$('#stats-div').show();
	upd_answers = false;
}
function hideStats(){
	$('#stats-div').hide();
}



function vote(location_id, answer_id){

	$.ajax({
	  url: '/locations/' + location_id + '/vote',
	  data: 'answer_id=' + answer_id,
	  success: function(data) {
	    //loadStats(location_id);
		
	  },
	  beforeSend: function(data) {
	    $('#ajax-div').html('<img src="/images/ajax.gif" alt="" />');
	  }
	});
	
	<% if @location.survey.display_stats %>
	hideAnswers();
	showStats();
	loadAnswers();
	setTimeout(function() {
	    hideStats();
		showAnswers();
	}, 2000);
	<% else %>
	loadAnswers();
	showAnswers();
	<% end %>
	return false;
}

function updateStatsDiv(){
	console.log('test');
	$('#stats-div').load('/surveys/<%=@location.survey_id%>/stats');
}

