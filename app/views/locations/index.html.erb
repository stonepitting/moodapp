<h1>Listing locations</h1>

<% if @locations.size == 0 %>
<div class="tutorial">
	<h2>First time?</h2>
	<p>
		It looks like you haven't created a location yet.
	</p>
	<p>
		Locations will allow you to track surveys per locations
	</p>
	<p>
		Use the form below to get started!
	</p>
	<%=render :partial => 'form'%>
</div>
<% else %>
<table>
  <tr>
    <th>Name</th>
    <th>Enabled</th>
    <th>Survey</th>
    <th></th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.name %></td>
    <td><%= location.enabled %></td>
    <td><%= location.survey.name if location.survey %></td>
    <td>
		<%= link_to 'Show', location %>
		<%= link_to 'Edit', edit_location_path(location) %>
		<%= link_to 'Destroy', location, :confirm => 'Are you sure?', :method => :delete %>
	</td>
  </tr>
<% end %>
</table>

<br />
<% end %>

<%= link_to 'New Location', new_location_path, :class => 'button' %>
