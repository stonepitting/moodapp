<h1>Listing answers</h1>

<table>
  <tr>
    <th>Survey</th>
    <th>As image</th>
    <th>Content</th>
    <th>Order</th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.survey_id %></td>
    <td><%= answer.as_image %></td>
    <td><%= answer.content %></td>
    <td><%= answer.order %></td>
    <td>
		<%= link_to 'Show', answer %>
		<%= link_to 'Edit', edit_answer_path(answer) %>
		<%= link_to 'Destroy', answer, :confirm => 'Are you sure?', :method => :delete %>
	</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Answer', new_survey_answer_path(@survey.id), :class => 'button' %>
